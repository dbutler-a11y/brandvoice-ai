# ===========================================
# BrandVoice.AI - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database - Supabase PostgreSQL
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres"
DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres"

# OpenAI API
OPENAI_API_KEY="sk-proj-your-openai-api-key"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Base URL for the app
# Development: http://localhost:3000
# Production: https://brandvoice.studio
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# ElevenLabs API (Voice AI)
ELEVENLABS_API_KEY="sk_your_elevenlabs_api_key"
NEXT_PUBLIC_ELEVENLABS_AGENT_ID="your_agent_id"

# Calendly Integration
NEXT_PUBLIC_CALENDLY_URL="https://calendly.com/your-username/meeting"

# PayPal Configuration
# Sandbox: https://developer.paypal.com/dashboard/applications/sandbox
# Live: https://developer.paypal.com/dashboard/applications/live
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
NEXT_PUBLIC_PAYPAL_MODE="sandbox"  # Change to "live" for production

# PayPal Webhook Configuration
# Create webhook at: https://developer.paypal.com/dashboard/webhooks
# Webhook URL: https://brandvoice.studio/api/webhooks/paypal
# Subscribe to: CHECKOUT.ORDER.COMPLETED, PAYMENT.CAPTURE.COMPLETED,
#   BILLING.SUBSCRIPTION.ACTIVATED, BILLING.SUBSCRIPTION.CANCELLED,
#   BILLING.SUBSCRIPTION.PAYMENT.FAILED, CUSTOMER.DISPUTE.CREATED,
#   PAYMENT.CAPTURE.REFUNDED
PAYPAL_WEBHOOK_ID="your-webhook-id-from-paypal-dashboard"

# Email Configuration (Resend)
# Sign up at https://resend.com for free tier (3,000 emails/month)
RESEND_API_KEY="re_your_api_key_here"
EMAIL_FROM="BrandVoice.AI <hello@brandvoice.ai>"
ADMIN_EMAIL="admin@brandvoice.ai"
